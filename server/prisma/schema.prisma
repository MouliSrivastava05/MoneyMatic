generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")

  transactions Transaction[]
  budgets      Budget[]
  reminders    Reminder[]
}

model Transaction {
  id          Int      @id @default(autoincrement())
  userId      Int      @map("user_id")
  type        String   // "income" or "expense"
  amount      Decimal
  category    String
  description String?
  date        DateTime
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
  @@index([category])
  @@map("transactions")
}

model Budget {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  category  String
  limit     Decimal
  period    String   // "monthly", "weekly", "yearly"
  month     Int?     // 1-12 for monthly budgets
  year      Int?     // For monthly/yearly budgets
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, category, period, month, year])
  @@index([userId])
  @@index([year, month])
  @@map("budgets")
}

model Reminder {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  title     String
  amount    Decimal?
  dueDate   DateTime @map("due_date")
  frequency String   // "monthly", "weekly", "one-time", "yearly"
  isActive  Boolean  @default(true) @map("is_active")
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([dueDate])
  @@index([isActive])
  @@map("reminders")
}
